# Maintainer: Rodrigo Tavares
_pkgname=tuneperfect
pkgname=${_pkgname}-bin
pkgver=v0.0.85
pkgrel=1
pkgdesc="Tune Perfect game"
arch=('x86_64')
url="https://github.com/ZerNico/${_pkgname}"
license=('MIT')
provides=("${_pkgname}")
conflicts=("${_pkgname}-git")
depends=(
  'alsa-lib'
  'cairo'
  'gcc-libs'
  'gdk-pixbuf2'
  'glib2'
  'glibc'
  'gtk3'
  'hicolor-icon-theme'
  'libsoup3'
  'pango'
  'webkit2gtk-4.1'
)

source_x86_64=(
  "https://github.com/ZerNico/${_pkgname}/releases/download/v${pkgver}/Tune.Perfect_${pkgver}_amd64.deb"
  "https://raw.githubusercontent.com/ZerNico/${_pkgname}/master/LICENSE"
)
sha256sums_x86_64=('0019dfc4b32d63c1392aa264aed2253c1e0c2fb09216f8e2cc269bbfb8bb49b5' '9cfe30a75b533f493b35158dd82d6235c23909f3cf45fbd287065fc457aa6b8f')

OPTIONS=(!strip)

package() {
  bsdtar -C "${pkgdir}" -xf data.tar.gz

  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}